#!/bin/bash

git_clone() {
  git clone https://github.com/convox/$1
  cd $1
  /usr/bin/git-restore-mtime .
}

set -e

mkdir -p $GOPATH/src/github.com/convox
cd $GOPATH/src/github.com/convox
git_clone cli

tag=$(date +%Y%m%d%H%M%S)

sed -i -e "s/\"dev\"/\"${tag}\"/g" convox/main.go

equinox release --equinox-account=$EQUINOX_ACCOUNT --equinox-secret=$EQUINOX_SECRET \
  --equinox-app=$EQUINOX_APP --channel=stable --version=$tag ./convox

echo "cli released: $tag"

curl -X POST -d "payload={\"text\":\"cli released: $tag\"}" $SLACK_WEBHOOK_URL
